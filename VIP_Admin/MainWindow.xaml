<Window x:Class="VIP_Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIP_Admin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        

        <DataTemplate DataType="{x:Type local:Application1}">
            <Grid Width="600" Margin="0 0 0 5" >
                <StackPanel>
                    <Label Content="{Binding Title}" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding IdTypeNavigation.Title}"/>
                        <Label Content="{Binding IdClubNavigation.Title}"/>
                        <Label Content="{Binding DateOfFiling, StringFormat=dd mm yyyy}"/>

                    </StackPanel>
                </StackPanel>
                <Label Content="{Binding IdStatusNavigation.Title}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </DataTemplate>




    </Window.Resources>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Height="60">
                <Button Margin="20" Content="принять" Click="YES"/>
                <Button Margin="20" Content="отказать"  Click="NO"/>

            </StackPanel>
            <ListBox Height="350" ItemsSource="{Binding Requestes}" Grid.Row="1"
     SelectedItem="{Binding SelectedRequests}">
                
            </ListBox>
        </StackPanel>

    </Grid>
</Window>
