<Window x:Class="VIP_Admin.FullClub"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VIP_Admin"
        mc:Ignorable="d"
        Title="FullClub" Height="450" Width="800">
    <Window.Resources>

        <local:ConvertHeight2 x:Key="heightOffsetConverter"/>
        <local:ConverterForTextBox x:Key="TextBoxOffsetConverter"/>
        <local:ConverterForTextBoxHieght x:Key="TextBoxHeightOffsetConverter"/>


    </Window.Resources>
    <Grid>
        <Button Cursor="Hand"  Margin="0 15 25 0" Template="{StaticResource ButtonFound}" HorizontalAlignment="Right" VerticalAlignment="Top" Click="BackToTheFuture"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="{Binding ElementName=Win, Path=ActualHeight, Converter={StaticResource heightOffsetConverter}}" >
            <StackPanel Margin="0 -10 0 0" Width="{Binding ElementName=Win, Path=ActualWidth}"  VerticalAlignment="Center" >

                <Label FontSize="15" Height="25" Margin="20 -50 0 0" Content="Название клуба"/>
                <TextBox FontSize="15"  Height="{Binding ElementName=Win, Path=ActualHeight, Converter={StaticResource TextBoxHeightOffsetConverter}}" Width="{Binding ElementName=Win, Path=ActualWidth,Converter={StaticResource TextBoxOffsetConverter}}"  VerticalAlignment="Center"  Margin="-50 -10 0 0" Style="{StaticResource TextBoxStyle}" Text="{Binding Application.Title}"/>
                <Label FontSize="15" Margin="20 -3 0 -5" Content="Описание деятельности"/>
                <TextBox FontSize="15" Margin="-50 0 0 0"  Width="{Binding ElementName=Win, Path=ActualWidth,Converter={StaticResource TextBoxOffsetConverter}}"
                       TextWrapping="Wrap"
                       Height="{Binding ElementName=Win, Path=ActualHeight, Converter={StaticResource TextBoxHeightOffsetConverter}, ConverterParameter=BigTextBox}"
                       Style="{StaticResource TextBoxStyle}" Text="{Binding Application.Description}"/>
                <Label FontSize="15" Margin="20 -3 0 -5" Content="Ваше имя"/>
                <TextBox FontSize="15" IsEnabled="False" Margin="-50 0 0 0" Height="{Binding ElementName=Win, Path=ActualHeight, Converter={StaticResource TextBoxHeightOffsetConverter}}" Width="{Binding ElementName=Win, Path=ActualWidth,Converter={StaticResource TextBoxOffsetConverter}}"  Style="{StaticResource TextBoxStyle}" Text="{Binding Application.User.FirstName}"/>
                <Label FontSize="15" Margin="20 -3 0 -5" Content="Вашу фамилию"/>
                <TextBox FontSize="15" IsEnabled="False" Margin="-50 0 0 0" Height="{Binding ElementName=Win, Path=ActualHeight, Converter={StaticResource TextBoxHeightOffsetConverter}}" Width="{Binding ElementName=Win, Path=ActualWidth,Converter={StaticResource TextBoxOffsetConverter}}"  Style="{StaticResource TextBoxStyle}" Text="{Binding Application.User.LastName}"/>
                <Label FontSize="15" Margin="20 -3 0 -5" Content="Ваше отчество"/>
                <TextBox IsEnabled="False" Margin="-50 0 0 0" Height="{Binding ElementName=Win, Path=ActualHeight, Converter={StaticResource TextBoxHeightOffsetConverter}}" Width="{Binding ElementName=Win, Path=ActualWidth,Converter={StaticResource TextBoxOffsetConverter}}"  Style="{StaticResource TextBoxStyle}" Text="{Binding Application.User.Patronymic}"/>
                <Label FontSize="15" Margin="20 -3 0 -5" Content="Ваш телефон"/>
                <TextBox FontSize="15" IsEnabled="False" Margin="-50 0 0 0" Height="{Binding ElementName=Win, Path=ActualHeight, Converter={StaticResource TextBoxHeightOffsetConverter}}" Width="{Binding ElementName=Win, Path=ActualWidth,Converter={StaticResource TextBoxOffsetConverter}}"  Style="{StaticResource TextBoxStyle}" Text="{Binding Application.User.Phone}"/>
                <Button Margin="0 0 0 0" Style="{StaticResource ButtonStyles}" FontSize="15" Content="Изменить" Click="EditClub"/>

            </StackPanel>
            <StackPanel  Margin="-190 0 0 30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Width="100" Source="/gooseinhat2.png"/>
                <Button Margin="0 0 0 20" Click="AddImage" FontSize="13" Content="Изменить фото" Style="{StaticResource ButtonStyles}" Width="100" Height="30" HorizontalAlignment="Left"/>
                <StackPanel >
                    <Label FontSize="15" Content="Вид деятельности"/>
                    <ComboBox FontSize="15" Style="{StaticResource ComboBoxStyle}" ItemsSource="{Binding TypesAppls}" SelectedItem="{Binding SelectedType}" DisplayMemberPath="Title"/>
                </StackPanel>
            </StackPanel>



        </StackPanel>
    </Grid>
</Window>
